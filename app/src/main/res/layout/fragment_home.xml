<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"></LinearLayout>

                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="51dp"
                    app:srcCompat="@drawable/taskup_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/baseline_account_circle_24"
                        app:tint="?attr/colorOutline" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/TextAppearance.JakartaSans.Medium14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Welcome back,"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/tvUser"
                style="@style/TextAppearance.Kollektif.Bold24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="John Doe"
                android:textColor="?attr/colorOnBackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?attr/colorOnPrimaryContainer"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvBacklogTitle"
                            style="@style/TextAppearance.Kollektif.Bold32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="12"
                            android:textColor="?attr/colorOnSecondary" />

                        <TextView
                            android:id="@+id/tvBacklogSubtitle"
                            style="@style/TextAppearance.JakartaSans.Medium12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="tasks in backlog this week"
                            android:textColor="?attr/colorOnSecondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?attr/colorTertiary"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvCompletedTitle"
                            style="@style/TextAppearance.Kollektif.Bold32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="5"
                            android:textColor="?attr/colorOnSecondary" />

                        <TextView
                            android:id="@+id/tvCompletedSubtitle"
                            style="@style/TextAppearance.JakartaSans.Medium12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="tasks completed this week"
                            android:textColor="?attr/colorOnSecondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvProjects"
                    style="@style/TextAppearance.Kollektif.Bold24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Projects"
                    android:textColor="?attr/colorOnBackground" />

                <TextView
                    android:id="@+id/tvProjectsSeeMore"
                    style="@style/TextAppearance.JakartaSans.SemiBold12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="See More"
                    android:textColor="?attr/colorOutline" />

            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:justifyContent="space_between"
                app:flexDirection="row"
                android:layout_marginBottom="8dp">

                <include layout="@layout/card_project_small"/>
                <include layout="@layout/card_project_small"/>
                <include layout="@layout/card_project_small"/>
                <include layout="@layout/card_project_small"/>

            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvTasks"
                    style="@style/TextAppearance.Kollektif.Bold24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tasks"
                    android:textColor="?attr/colorOnBackground" />

                <TextView
                    android:id="@+id/tvTasksSeeMore"
                    style="@style/TextAppearance.JakartaSans.SemiBold12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="See More"
                    android:textColor="?attr/colorOutline" />

            </LinearLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
                android:divider="@android:color/transparent"
                android:dividerHeight="24dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>