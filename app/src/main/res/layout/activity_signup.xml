<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:paddingTop="70dp"
            android:paddingBottom="70dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <!-- Header -->
            <ImageView
                android:layout_width="168dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/taskup_logo"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Sign up"
                style="@style/TextAppearance.Kollektif.Bold32"
                android:textColor="?attr/colorOnBackground"
                />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:text="Enter your information to create an account"
                style="@style/TextAppearance.JakartaSans.Medium14"
                android:textColor="?attr/colorOutline"
                />

            <!-- Email TextField -->
            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Email"
                style="@style/TextAppearance.JakartaSans.Medium14"
                android:textColor="?attr/colorOnBackground"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tfEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    style="@style/TextAppearance.JakartaSans.Medium14" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Username TextField -->
            <TextView
                android:id="@+id/labelUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Username"
                style="@style/TextAppearance.JakartaSans.Medium14"
                android:textColor="?attr/colorOnBackground"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tfUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:hintEnabled="false" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Create a username"
                    style="@style/TextAppearance.JakartaSans.Medium14" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password TextField -->
            <TextView
                android:id="@+id/labelPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Password"
                style="@style/TextAppearance.JakartaSans.Medium14"
                android:textColor="?attr/colorOnBackground"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tfPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:hintEnabled="false" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Create a password"
                    style="@style/TextAppearance.JakartaSans.Medium14" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Signup Button -->
            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:padding="16dp"
                android:backgroundTint="?attr/colorOnPrimaryContainer"
                android:text="Sign up"
                android:textColor="?attr/colorOnPrimary"
                style="@style/TextAppearance.JakartaSans.SemiBold16"
                app:cornerRadius="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLoginLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Already have an account?"
                    style="@style/TextAppearance.JakartaSans.Medium14"
                    android:textColor="?attr/colorOutline" />

                <!-- Link to login if they already have an account -->
                <TextView
                    android:id="@+id/tvLoginLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    style="@style/TextAppearance.JakartaSans.Medium14"
                    android:textColor="?attr/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>